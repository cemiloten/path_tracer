    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run path tracer",
            "type": "shell",
            "command": "build/path_tracer && open output.ppm",
            "windows": {
                "command": ".\\build\\path_tracer.exe && \"C:\\Program Files (x86)\\XnView\\xnview.exe\" output.ppm",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}